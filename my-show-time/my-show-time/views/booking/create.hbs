  <div class="max-w-3xl mx-auto my-8 px-4">
    
    <div class="mb-6">
      <a href="/concert/{{concert._id}}/detail" class="inline-flex items-center text-blue-600 hover:text-blue-800">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to the concert
      </a>
    </div>

    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-2"> Reserve your place</h1>
      <p class="text-gray-600">For the concert of {{concert.artist_name}}</p>
    </div>

    <div class="bg-white rounded-lg shadow-lg overflow-hidden">

      <div class="bg-blue-500 p-6 text-white">
        <h2 class="text-2xl font-bold mb-4">{{concert.artist_name}}</h2>
        <div class="grid gap-2">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span class="date-format">{{concert.date_concert}}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            </svg>
            <span>{{concert.location}}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-2xl font-bold">{{concert.price}} $</span>
          </div>
        </div>
      </div>

      <div class="p-6">
        <form id="bookingForm" class="space-y-6" method="POST" action="/booking/{{concert._id}}" >
        
          <div>

          </div>

          <div>
            <label for="ticketCount" class="block text-sm font-medium text-gray-700 mb-2">
              Number of tickets
            </label>
            <select 
              id="ticketCount" 
              name="ticketCount"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:blue-500 focus:border-transparent"
            >
              <option value="1">1 ticket</option>
              <option value="2">2 tickets</option>
              <option value="3">3 tickets</option>
              <option value="4">4 tickets</option>
              <option value="5">5 tickets</option>
            </select>
          </div>

          <div class="bg-gray-50 p-4 rounded-lg">
            <div class="flex justify-between items-center text-lg">
              <span class="font-semibold text-gray-700">Total to pay:</span>
              <span id="totalPrice" class="text-2xl font-bold text-blue-600">{{concert.price}} $</span>
            </div>
          </div>

          <div id="message" class="hidden"></div>

          <div class="flex gap-4">
            <button 
              type="button"
              onclick="window.history.back()"
              class="flex-1 px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition duration-200"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200 font-semibold"
            >
              Confirm the reservation
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    const concertPrice = {{concert.price}};

    document.addEventListener('DOMContentLoaded', function() {
      const dateElements = document.querySelectorAll('.date-format');
      dateElements.forEach(element => {
        const dateString = element.textContent.trim();
        if (dateString) {
          element.textContent = new Date(dateString).toLocaleDateString('en-GB', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          });
        }
      });

      const ticketCountSelect = document.getElementById('ticketCount');
      const totalPriceElement = document.getElementById('totalPrice');

      ticketCountSelect.addEventListener('change', function() {
        const count = parseInt(this.value);
        const total = concertPrice * count;
        totalPriceElement.textContent = total.toLocaleString('fr-FR') + ' Euros';
      });
    });
  </script>
</body>


