<div class="mb-8 flex justify-center">
  <form action="/" method="GET" class="flex gap-2 w-full max-w-md">
    <input 
      type="text" 
      name="artist" 
      placeholder="Search by artist..." 
      class="flex-1 px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
      value="{{query.artist}}">
    <button 
      type="submit" 
      class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200">
      Search
    </button>
  </form>
</div>



    {{#if concerts.length}}
    <ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 p-2 xl:p-5">
      {{#each concerts}}
      <li class="relative bg-white flex flex-col justify-between border rounded shadow-md hover:shadow-blue-400 transition duration-300 cursor-pointer"
    onclick="window.location.href='/concert/{{this._id}}/detail'">

        <div class="relative">
          <div class="relative w-full aspect-video">
            <img class="rounded-t w-full h-full object-cover"
                src="{{this.image}}" 
                alt="{{this.name}}" 
                loading="lazy"
                onerror="this.src='https://images.unsplash.com/photo-1571266028243-e2ce0adc94ab?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w0NzEyNjZ8MHwxfHNlYXJjaHwxfHxjb25jZXJ0JTIwbXVzaWN8ZW58MHwwfHx8MTcwNjgwMDAwMnww&ixlib=rb-4.0.3&q=80&w=1080'">
            
            <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-b from-transparent to-black text-white">
              <h2 class="text-xl font-semibold">{{this.name}}</h2>
              <p class="font-medium text-sm">{{this.artist_name}}</p>
            </div>
          </div>
        </div>

        <div class="flex flex-col justify-between gap-3 px-4 py-4">

          <p class="text-gray-600 two-lines">
            {{this.description}}
          </p>

          <ul class="flex flex-wrap items-center justify-start text-sm gap-2">
            <li class="flex items-center gap-0.5 bg-blue-100 text-blue-800 px-2 py-0.5 rounded-full">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="date-format">{{this.date_concert}}</span>
            </li>

            <li class="flex items-center gap-0.5 bg-green-100 text-green-800 px-2 py-0.5 rounded-full">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>{{this.location}}</span>
            </li>
          </ul>

          <ul class="flex flex-wrap text-sm gap-2 my-1">
            <li class="flex items-center gap-2 bg-gray-100 px-2 py-1 rounded">
              <span class="font-medium">Category:</span>
              <span>{{this.category}}</span>
            </li>
            <li class="flex items-center gap-2 bg-yellow-100 px-2 py-1 rounded">
              <span class="font-medium">Price:</span>
              <span>{{this.price}}€</span>
            </li>
          </ul>

          <div class="flex justify-between items-center mt-2">
            <span class="text-sm text-gray-500">
              {{this.availableTickets}} Available tickets
            </span>
            <button 
              onclick="bookTicket('{{this._id}}')"
              class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition duration-200"
            >
              To book
            </button>
          </div>
        </div>

      </li>
      {{/each}}
    </ul>
    {{else}}
    <div class="text-center py-16">
      <div class="text-6xl mb-4">Concert</div>
      <h2 class="text-2xl font-bold text-gray-700 mb-2">No concerts at the moment</h2>
      <p class="text-gray-500">Come back soon to discover our upcoming events. !</p>
    </div>
    {{/if}}

